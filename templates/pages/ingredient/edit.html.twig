{% extends "base.html.twig" %}

{% block title %}Sharecipe - Modification de l'ingrédient
{% endblock %}


{% block body %}
	<div class="container">

		<h1 class="mt-4">Modification de l'ingrédient</h1>

		<form class="ingredient" method="post">

		<div class="form-group">
			{{ form_label(form.name) }}
			{{ form_widget(form.name) }}
			<div class="form-error">
				{{ form_errors(form.name) }}
			</div>
		</div>

		<div class="form-group">
			{{ form_label(form.price) }}
			{{ form_widget(form.price) }}
			<div class="form-error">
				{{ form_errors(form.price) }}
			</div>
		</div>

		{{ form_row(form._token) }}
		<button type="submit" class="btn btn-primary mt-4" id="ingredient_submit" name="ingredient[submit]">
		Modifier l'ingrédient</button>

	</form>
</div>

{% endblock %}
